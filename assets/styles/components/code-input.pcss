.code-input {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100%;

  &__part {
    width: 90px;
    border: 1px solid rgba(47, 128, 243, 0.32);
    height: 80px;
    line-height: 20px;
    text-align: center;
    font-size: 40px;
  }

  &__desc {
    font-size: 20px;
    line-height: 20px;
    margin-bottom: 35px;
    display: block;
  }

  &__desc-link {
    color: #2F80F3;
    padding-top: 10px;
    text-decoration: none;
    display: block;
  }
}
